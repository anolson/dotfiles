# Stuff
alias la='ls -a'
alias ll='ls -al'

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias dots="cd ~/.dotfiles"

# Bundler
alias b="bundle"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias rk="rake"

# Go
alias gb="go build ./..."
alias gvb="go build -b ./..."
alias gt="go test ./..."
alias gvt="go test -v ./..."

# Sublime
alias s="subl ."

# Airport
alias airport="/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport"

# Git
alias cp-branch="git current-branch | tr -d '\n' | pbcopy"

# Capybara
alias last_screenshot="ls -1 tmp/capybara/*.png | tail -1 | xargs open"

# tmux
alias tml="tmux list-sessions"
alias tma="tmux -2 attach -t $1"
alias tmk="tmux kill-session -t $1"
alias mux="RBENV_VERSION=`rbenv global` tmuxinator"
