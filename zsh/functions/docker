# Docker helpers

function dup() {
  docker-compose up -d
}

function dstop() {
  docker-compose stop
}

function dexec() {
  docker exec $@
}

function drun() {
  docker-compose run --rm $@
}

function dsup() {
  drun -d --name spring `current_service` spring server
}

function dsrm() {
  docker stop spring && docker rm spring
}

function dss() {
  docker exec spring spring status
}

function drails() {
  docker exec -it spring rails $@
}

function drspec() {
  docker exec -e COVERAGE=no spring bin/rspec $@
}

function current_service() {
  basename `pwd`
}
